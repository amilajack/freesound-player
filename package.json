{
  "name": "freesound-player",
  "version": "1.0.0",
  "description": "A better freesound UI",
  "license": "MIT",
  "homepage": "https://freesound-player.vercel.app",
  "keywords": [
    "react",
    "starter"
  ],
  "dependencies": {
    "@colormap/core": "0.2.0",
    "@colormap/presets": "0.2.0",
    "@ionic/react": "^5.4.4",
    "@types/lodash": "^4.14.165",
    "autoprefixer": "^10.0.2",
    "dompurify": "^2.2.2",
    "freesound-client": "^0.3.0",
    "ionicons": "^5.2.3",
    "localforage": "^1.9.0",
    "lodash": "^4.17.20",
    "postcss-cli": "^8.2.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-modal": "^3.11.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "^4.0.0",
    "react-wavesurfer.js": "^0.0.2",
    "tailwindcss": "^1.9.6",
    "tinykeys": "^1.1.1",
    "use-debounce": "^5.0.4",
    "wavesurfer.js": "4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/node-logger": "^6.0.28",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.0.28",
    "@storybook/storybook-deployer": "^2.8.7",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.1.2",
    "@tsconfig/node12": "^1.0.7",
    "@types/cypress": "^1.1.3",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.6",
    "bundlesize": "^0.18.0",
    "eslint-config-bliss": "^5.0.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "levenary": "^1.1.1",
    "lint-staged": "^10.5.1",
    "pwa-asset-generator": "^3.2.3",
    "react-is": "^17.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "start": "yarn build:style && react-scripts start",
    "build": "NODE_ENV=production yarn build:style && react-scripts build",
    "build:style": "tailwindcss build src/styles.css -o src/build.css",
    "build:icons": "pwa-asset-generator ./public/icons/light-icon.svg public/icons --padding 0px --background '#FBDC57' --index ./public/index.html --path '%PUBLIC_URL%' --manifest public/manifest.json && pwa-asset-generator ./public/icons/dark-icon.svg public/icons --padding 0px --background 'black' --dark-mode --splash-only --index ./public/index.html --path '%PUBLIC_URL%' && prettier 'public/index.html' --write",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "e2e": "cypress run",
    "storybook": "start-storybook -p 6006 -s public --no-dll",
    "build-storybook": "build-storybook -s public --no-dll",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "renovate": {
    "extends": [
      "bliss"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "bliss",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "bundlesize": [
    {
      "path": "./build/static/js/main.*.chunk.js",
      "maxSize": "10 kB"
    }
  ]
}
